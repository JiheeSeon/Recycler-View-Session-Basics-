<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iv_profile_thumbnail"
        android:layout_width="60dp"
        android:layout_height="60dp"
        tools:src="@drawable/icon_profile_0"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="27dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_profile_name"
        tools:text="Jihee Seon (24)"
        android:textSize="17dp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/applesdgothicneosb"
        app:layout_constraintStart_toEndOf="@id/iv_profile_thumbnail"
        app:layout_constraintTop_toTopOf="@id/iv_profile_thumbnail"
        />

    <TextView
        android:id="@+id/tv_profile_info"
        tools:text="Ewha W. University / Senior / Major in Econ"
        android:textSize="13dp"
        android:textColor="#666464"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/applesdgothicneom"
        app:layout_constraintStart_toStartOf="@id/tv_profile_name"
        app:layout_constraintTop_toBottomOf="@id/tv_profile_name"
        />
</androidx.constraintlayout.widget.ConstraintLayout>